<%- include("partials/header.ejs") %>
    <h1 class="h1_home">Compose</h1>
    <form action="/compose" method="post">
        <div class="form-group">
            <label for="exampleFormControlInput1">Title</label>
            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Title" name="title">
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Post</label>
            <textarea class="form-control post_content" id="exampleFormControlTextarea1" rows="10" cols="30"
                placeholder="Write your post here..." name="textContent"></textarea>
        </div>
        <button type="submit" name="button" class="btn btn-primary"> Publish</button>
    </form>
    <%- include("partials/footer.ejs") %>