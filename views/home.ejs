<%- include("partials/header.ejs") -%>
    <div class="content">
    <h1 class="h1_home">
        Home
    </h1>
    <h2 class="post_h2">
        <%=startingContent.title %>
    </h2>
    <p class="post_content">
        <%=startingContent.content%>
    </p>
    <%for(let i=0;i<posts.length;i++){ %>
        <% if(posts.length>1 && i==0) {%>
            <% ++i; %>
                <% } %>
                    <h2 class="post_h2">
                        <a href="/posts/<%=posts[i]._id%>"><%= posts[i].title.substring(0,100);%></a>
                       <% if(posts[i].title.length > 100){ %>
                            <a href="/posts/<%=posts[i]._id%>">...</a>
                        <% } %>
                    </h2>
                    <p class="post_content">
                        <%=posts[i].content.substring(0,400); %>
                        <% if(posts[i].content.length > 400){ %>
                            <a href="/posts/<%=posts[i]._id%>">...Read More</a>
                       <% } %>
                    </p>
                    <% } %>
                </div>
                        <%- include("partials/footer_home.ejs") -%>